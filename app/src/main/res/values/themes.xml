<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="ThemeCommon">
        <!--    通用页面背景    -->
        <item name="android:windowBackground">@color/white</item>
        <!--   通用状态栏背景颜色     -->
<!--        <item name="android:statusBarColor">?android:windowBackground</item>-->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <!--    对话框背景颜色    -->
        <item name="qmui_skin_support_dialog_bg">@color/dialog_bg</item>
        <!--    对话框圆角    -->
        <item name="qmui_dialog_radius">14dp</item>
        <!--    对话框标题的样式    -->
        <item name="qmui_dialog_title_style">@style/bottom_sheet_title_style</item>
        <!--    输入型对话框，编辑框的样式    -->
<!--        <item name="qmui_dialog_edit_content_style">@style/EditContent</item>-->
        <!--    输入型对话框，编辑下划线高度    -->
        <item name="qmui_dialog_edit_bottom_line_height">0dp</item>
        <!--    BottomSheet选择的条目右侧的箭头    -->
<!--        <item name="qmui_skin_support_bottom_sheet_list_mark">@drawable/qmui_icon_checkmark_tint-->
<!--        </item>-->
        <!--    BottomSheet背景颜色    -->
        <item name="qmui_skin_support_bottom_sheet_bg">@color/bottom_sheet_bg</item>
        <!--    BottomSheet标题的样式    -->
        <item name="qmui_bottom_sheet_title_style">@style/bottom_sheet_title_style</item>
        <!--    BottomSheet列表的样式    -->
<!--        <item name="qmui_bottom_sheet_list_item_text_style">@style/bottom_sheet_list_text_style-->
<!--        </item>-->
        <!--    BottomSheet列表的背景    -->
<!--        <item name="qmui_skin_support_s_list_item_bg_1">@drawable/qmui_list_item_bg_1</item>-->
        <!--    BottomSheet列表的分割线颜色    -->
        <item name="qmui_skin_support_bottom_sheet_separator_color">@color/d8_10</item>
    </style>

    <style name="ThemeCommon" parent="QMUI.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorLink">#FF0A84FF</item>
    </style>

    <style name="AppTheme.Splash">
        <!--    沉浸式状态栏    -->
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowBackground">@drawable/splash_bg</item>-->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="QMUI.SliderThumb">
        <item name="android:background">@color/button_positive</item>
        <item name="qmui_borderColor">@color/button_positive</item>
        <item name="qmui_borderWidth">1px</item>
        <item name="qmui_showBorderOnlyBeforeL">false</item>
        <item name="qmui_shadowElevation">8dp</item>
        <item name="qmui_shadowAlpha">0.4</item>
    </style>

    <style name="bottom_sheet_title_style" parent="QMUI.BottomSheet.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="dialog_alarm" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>